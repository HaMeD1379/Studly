{
  "name": "studly",
  "version": "1.0.0",
  "description": "Gamified studying to promote academic success",
  "main": "index.ts",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run && npm run test:e2e",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest --coverage",
    "test:unit:ui": "vitest --ui --coverage",
    "test:e2e": "start-server-and-test 'npm run start' http://localhost:5173 'npx cypress run'",
    "test:e2e:ui": "start-server-and-test 'npm run start' http://localhost:5173 'npx cypress open --e2e'",
    "lint": "biome check --linter-enabled=true --formatter-enabled=false src cypress/e2e/ cypress/constants cypress/support",
    "lint:fix": "biome check --linter-enabled=true --formatter-enabled=true --write src cypress/e2e/ cypress/constants cypress/support",
    "format": "biome format src cypress/e2e/ cypress/constants cypress/support",
    "format:fix": "biome format --write src cypress/e2e/ cypress/constants cypress/support"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HaMeD1379/Studly.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HaMeD1379/Studly/issues"
  },
  "homepage": "https://github.com/HaMeD1379/Studly#readme",
  "dependencies": {
    "@mantine/core": "^8.3.4",
    "@mantine/dates": "^8.3.4",
    "@mantine/hooks": "^8.3.4",
    "@mantine/notifications": "^8.3.4",
    "@supabase/supabase-js": "^2.76.1",
    "@tabler/icons": "^3.35.0",
    "@tabler/icons-react": "^3.35.0",
    "@testing-library/react": "^16.3.0",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.3",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cypress": "^15.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.12",
    "jsdom": "^27.0.0",
    "node-abort-controller": "^3.1.1",
    "start-server-and-test": "^2.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2022": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "jsx-a11y",
      "react-refresh"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react-refresh/only-export-components": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "coverage/"
    ]
  }
}

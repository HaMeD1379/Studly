{
  "name": "studly-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "test": "node tests/support/run-jest-lite.js",
    "test:coverage": "node tests/support/run-jest-lite.js --coverage",
    "profile:test": "cross-env ENABLE_PROFILING=1 node tests/support/run-jest-lite.js",
    "profile:server": "cross-env ENABLE_PROFILING=1 node --cpu-prof --cpu-prof-name=server.cpuprofile src/index.js",
    "profile:all": "cross-env ENABLE_PROFILING=1 node scripts/profile-all.js",
    "profile:summarize": "node scripts/summarize-timings.js",
    "lint": "eslint src tests --ext .js,.cjs,.mjs",
    "lint:fix": "npm run lint -- --fix",
    "format": "biome format --write src tests",
    "biome:check": "biome check --linter-enabled=true --formatter-enabled=false --organize-imports-enabled=false src tests"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "zod": "^3.x.x"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "eslint": "^8.57.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "coverage/"
    ]
  }
}
